<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>

      <a href="/contact/add" class="btn btn-primary mb-2"
        >Tambah Data Contact</a
      >

      <% if (msg.length) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Handphone</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr id="trnya">
            <td colspan="4">
              <div class="alert alert-danger" role="alert">
                Data kontak kosong
              </div>
            </td>
          </tr>
          <% } else { %>
          <!-- <% let no = 1; %>  -->
          <% contacts.forEach((contact,i) => { i++%>
          <tr id="<%= i %>">
            <!-- <th scope="row"><%= no++ %> </th> -->
            <th scope="row"><%= i %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %> "
                class="btn btn-success badge rounded-pill"
                ><i class="bi bi-info-circle"></i> detail</a
              >
            </td>
          </tr>
          <% }) %> <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
