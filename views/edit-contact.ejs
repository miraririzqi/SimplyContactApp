<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Ubah data contact</h2>
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(element => { %>
          <li><%= element.msg %></li>

          <% }) %>
        </ul>
      </div>
      <% } %>
      <form method="post" action="/contact/update">
        <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>">
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            aria-describedby="emailHelp"
            value="<%= contact.nama %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            aria-describedby="emailHelp"
            value="<%= contact.email %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">No HP</label>
          <input
            type="text"
            class="form-control"
            id="nohp"
            name="nohp"
            aria-describedby="emailHelp"
            value="<%= contact.nohp %>"
            required
          />
        </div>

        <button type="submit" class="btn btn-warning">
          Ubah Data Contact
        </button>
      </form>
    </div>
  </div>
</div>
